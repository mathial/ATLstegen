<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>{% block title %}ATL Stegen - Tennis / Padel{% endblock %}</title>

  {% block stylesheets %}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
  {% endblock %}

  <script src="{{ asset('js/jquery-3.3.1.min.js') }}"></script>
  <script src="{{ asset('js/highcharts.js') }}"></script>
  <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>

</head>

<body>
  <div class="container">
    <div id="header" class="jumbotron">
      <a href="{{ path('homepage') }}"><h1>ATL Stegen - Tennis / Padel</h1></a>
    </div>

    <div class="row">
      <div id="menu" class="col-md-3">

        {% if app.user %}
          <a href="{{ path('app_logout') }}">Logout {{ app.user.username }}</a>
          <p><a href="{{ path('change_password') }}">Change my password</a></p>
        {% else %}
          <a href="{{ path('app_login') }}">Log in</a>
        {% endif %}

        <h3>TENNIS</h3>
        
        <ul class="nav nav-pills nav-stacked">
          {# <li><a href="{{ path('homepage') }}">Home</a></li> #}
          <li><a href="{{ path('rules_sv') }}">RULES SV</a></li>
          <li><a href="{{ path('rankings_view') }}">RANKINGS - view</a></li>
          <li><a href="{{ path('simulator') }}">Points simulator (single)</a></li>
          <li><a href="{{ path('matchs_list', {'maxpage':50, 'page':1}) }}">MATCHS - list</a></li>
          <li><a href="{{ path('race_slutspel') }}">Race to Lund 2021 Slutspel !</a></li>
          <li><a href="{{ path('sunday_contest') }}">Sunday 21-22 contest</a></li>
        </ul>


        {% if is_granted('ROLE_USER') %} 
          <ul class="nav nav-pills nav-stacked"><i>USER</i>
            <li><a href="{{ path('matchs_new') }}">MATCHS - new</a></li>
          </ul>
        {% endif %}

        <h3>PADEL</h3>

        <ul class="nav nav-pills nav-stacked">
          <li><a href="{{ path('simulator_padel') }}">Points simulator (double)</a></li>
          <li><a href="{{ path('rankings_padel_view') }}">RANKINGS - view</a></li>
          <li><a href="{{ path('matchspadel_list', {'maxpage':50, 'page':1}) }}">MATCHS - list</a></li>
        </ul>

        {% if is_granted('ROLE_USER') %} 
          <ul class="nav nav-pills nav-stacked"><i>USER</i>
            <li><a href="{{ path('matchspadel_new') }}">MATCHS - new</a></li>
          </ul>
        {% endif %}

        {% if is_granted('ROLE_ADMIN') %} 
          <ul class="nav nav-pills nav-stacked"><i>ADMIN</i>
            <li><a href="{{ path('rankings_generate_tennis') }}">[TENNIS] Generate rankings</a></li>
            <li><a href="{{ path('rankings_generate_padel') }}">[PADEL] Generate rankings</a></li>
            <li><a href="{{ path('player_new') }}">PLAYERS - new</a></li>
            <li><a href="{{ path('players_list', {'maxpage':50, 'page':1}) }}">PLAYERS - list</a></li>
            <li><a href="{{ path('user_new') }}">USERS - new</a></li>
            <li><a href="{{ path('user_list') }}">USERS - list</a></li>
          </ul>
        {% endif %}

      </div>

      <div>
        {% if app.session.flashbag.peek('success') | length > 0 %} 
          <div class="alert alert-success">
            {% for message in app.session.flashbag.get('success') %}
              <p>Message flash Info : {{ message }}</p>
            {% endfor %}
          </div>
        {% endif %}

        {% if app.session.flashbag.peek('info') | length > 0 %} 
          <div class="alert alert-info">
            {% for message in app.session.flashbag.get('info') %}
              <p>Message flash Notice : {{ message }}</p>
            {% endfor %}
          </div>
        {% endif %}

        {% if app.session.flashbag.peek('error') | length > 0 %} 
          <div class="alert alert-danger">
            {% for message in app.session.flashbag.get('error') %}
              <p>Message flash Error : {{ message }}</p>
            {% endfor %}
          </div>
        {% endif %}
      </div>

      <div id="content" class="col-md-9">
        {% block body %}
        {% endblock %}
      </div>
    </div>

    <hr>

    <footer>
      {% include "common/footer.html.twig" %}
    </footer>
  </div>

  {% block javascripts %}
    
  {% endblock %}

</body>
</html>