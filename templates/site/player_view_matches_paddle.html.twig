{% extends "common/layout.html.twig" %}

{% block body %}

  {% include "site/player_header.html.twig" %}

  <h3>List Matchs Paddle ({{ listMatchs|length }}) - Page {{ page }} / {{ nbPages }}</h3>


  <table class="table">
    <tr>
      <th>#</th>
      <th>{{ knp_pagination_sortable(listMatchs, 'Date', 'm.date') }}</th>
      <th>Team A</th>
      <th>Team B</th>
      <th>Score</th>
      <th>{{ knp_pagination_sortable(listMatchs, 'Context', 'm.context') }}</th>
      <th>{{ knp_pagination_sortable(listMatchs, 'Conditions', 'm.conditions') }}</th>
      <th>Evol</th>
    </tr>
    {% set ind = (page * listMatchs|length) - (listMatchs|length - 1) %}

    {% for match in listMatchs %}

      <tr>
        <td>{{ ind }}</td>
        <td>{{ match.date|date("Y-m-d") }}</td>
        {% if match.tie!=1 %}
          <td class="winner-player">
        {% else %}
          <td>
        {% endif %}

          {% if match.idplayer1.id == player.id or match.idplayer2.id == player.id %}
            <span class="selected-player">
          {% else %}
            <span>
          {% endif %}

          <a href="{{ path('player_view', {'id':match.idplayer1.id}) }}">{{ match.idplayer1.nameshort }}</a> - <a href="{{ path('player_view', {'id':match.idplayer2.id}) }}">{{ match.idplayer2.nameshort }}</a>
          </span>
        </td>
        <td>
          {% if match.idplayer3.id == player.id or match.idplayer4.id == player.id %}
            <span class="selected-player">
          {% else %}
            <span>
          {% endif %}

          <a href="{{ path('player_view', {'id':match.idplayer3.id}) }}">{{ match.idplayer3.nameshort }}</a> - <a href="{{ path('player_view', {'id':match.idplayer4.id}) }}">{{ match.idplayer4.nameshort }}</a>
          </span>
        </td>
        <td>{{ match.score }}</td>
        <td>{{ match.context }}</td>
        <td>{{ match.conditions }}</td>
        <td>{{ arrMEvol[match.id] }}</td>
        <td></td>
      </tr>

      {% set ind = ind +1 %}
    {% endfor %}

  </table>


{% endblock %}

