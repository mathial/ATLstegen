{% extends "common/layout.html.twig" %}

{% block body %}

  <h3>Race to Lund 2020 Slutspel ! </h3>

  <p><i>Started on 2019-04-27. Information about the tournament can be found <a href="http://atllund.se/aktuellt/slutspel-i-stegen/" target="_blank">here</a></i></p>


  <table class="table">
    <tr>
      <th>#</th>
      <th>Player</th>
      <th>2020</th>
      <th>Tot</th>
    </tr>
    {% for i,data in arrRaceTot %}
      <tr>
         <td>{{ i+1 }}</td>
        <td><a href="{{ path('player_view', {'id': data["idP"]}) }}">{{ data["name"] }}</a></td>
        <td>{{ data["lastyear"] }}</td>
        <td>{{ data["tot"] }}</td>
      </tr>
    {% endfor %}
  </table>


{% endblock %}

