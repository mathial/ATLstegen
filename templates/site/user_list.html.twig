{% extends "common/layout.html.twig" %}

{% block body %}

  <h3>List Users ({{ listUsers|length }})</h3>

  <div class="table-responsive">
    <table class="table">
      <tr>
        <th>username</th>
        <th>linked player</th>
        <th>roles</th>
        <th>action</th>
      </tr>
      {% for user in listUsers %}

        <tr>
          <td>{{ user.username }}</td>
          <td><a href="{{ path('player_view', {'id':user.idplayer.id}) }}">{{ user.idplayer.nameshort }}</a></td>
          <td>{{ user.roles|join(', ') }}</td>
          <td><a href="{{ path('user_update', {'id':user.id}) }}">update</a></td>
        </tr>
      {% endfor %}
    </table>
  </div>
{% endblock %}

